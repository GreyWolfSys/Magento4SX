<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

	<type name="Magento\Checkout\Model\ShippingInformationManagement">
        <plugin name="gws_save_authorized_amount_in_quote" type="Altitude\SX\Plugin\Checkout\ShippingInformationManagement" sortOrder="1"/>
    </type>
	<type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="fetchPrice" xsi:type="object">Altitude\SX\Console\FetchPrice</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="custom_text_config_provider" xsi:type="object">Altitude\SX\Model\ConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Block\Checkout\LayoutProcessor">
        <plugin name="add_order_instructions1_field" type="Altitude\SX\Plugin\Checkout\LayoutProcessorPlugin" sortOrder="10"/>

    </type>
	<preference for="Magento\Checkout\Block\Onepage\Success" type="Altitude\SX\Block\Success"/>

    <preference for="Magento\Sales\Controller\Adminhtml\Order\View" type="Altitude\SX\Controller\Adminhtml\Order\View"/>

    <preference for="Magento\Tax\Model\Sales\Total\Quote\Tax" type="Altitude\SX\Model\SalesTotalTax"/>

    <preference for="Magento\Ups\Model\Carrier" type="Altitude\SX\Model\Carrier\Ups" />
    <preference for="Magento\Usps\Model\Carrier" type="Altitude\SX\Model\Carrier\Usps" />
    <preference for="Magento\Fedex\Model\Carrier" type="Altitude\SX\Model\Carrier\Fedex" />
    <preference for="Magento\Dhl\Model\Carrier" type="Altitude\SX\Model\Carrier\Dhl" />

    <preference for="Magento\Checkout\Block\Onepage\Link" type="Altitude\SX\Block\Onepage\Link" />
	<preference for="Magento\CatalogSearch\Controller\Result\Index" type="Altitude\SX\Controller\Result\Index" />

    <type name="Magento\Checkout\Block\Cart\Grid">
        <plugin name="module_checkout_cart_grid_override_template" type="Altitude\SX\Block\Checkout\Cart\Grid" />
    </type>
</config>