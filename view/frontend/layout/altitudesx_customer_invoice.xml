<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Invoices</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="sx-customer-account-navigation-orders">
            <arguments>
                <argument name="current" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Altitude\SX\Block\Invoices" name="sx_invoice" template="Altitude_SX::invoice/list.phtml" cacheable="false">
            </block>
        </referenceContainer>
    </body>
</page>
